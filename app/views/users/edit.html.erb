<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <%= render 'layouts/error', problem: @user %>
  <h3>ユーザ情報の更新</h3>
  <%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'ユーザ名', class: "form-label" %><br/>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :age, '年齢', class: "form-label" %><br/>
    <%= f.number_field :age, in: 1..100, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :part, 'パート', class: "form-label" %><br/>
    <%= f.select :part, User.parts_i18n.invert, {}, placeholder: 0%>
  </div>
  <div class="form-group">
    <%= f.label :intro, '自己紹介', class: "form-label" %><br/>
    <%= f.text_area :intro, class: "form-control" %>
  </div>
  <%= f.submit "Update User", class: "submit btn btn-secondary" %>
  <% end %>
</div>